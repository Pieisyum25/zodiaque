        <item name="android:tint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="background">
        <item name="android:background">?attr/background</item>
    </style>

    <style name="Widget.Zodiaque.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/general_card_corner_radius</item>
        <item name="android:layout_margin">@dimen/general_card_content_margin</item>
        <item name="elevation">@dimen/general_card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
