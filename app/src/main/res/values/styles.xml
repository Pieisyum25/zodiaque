<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Action bar. -->
    <style name="Theme.Zodiaque.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Zodiaque.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Zodiaque.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Zodiaque.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?colorPrimaryVariant</item>
        <item name="android:theme">@style/Theme.Zodiaque.ToolbarText</item>
<!--        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>-->
<!--        <item name="subtitleTextAppearance">@style/CustomSubTitleTextAppearance</item>-->
    </style>

    <style name="Theme.Zodiaque.ToolbarText">
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

