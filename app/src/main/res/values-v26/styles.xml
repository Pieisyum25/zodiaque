<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Zodiaque.TextView.Sign" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/eagle_lake</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="Widget.Zodiaque.TextView.Sign.Prompt" parent="Widget.Zodiaque.TextView.Sign">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Zodiaque.TextView.Sign.Header" parent="Widget.Zodiaque.TextView.Sign">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.Zodiaque.TextView.Sign.Footer" parent="Widget.Zodiaque.TextView.Sign">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.Zodiaque.TextView.Horoscope.Card" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/cardo_bold</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.Zodiaque.TextView.Horoscope.Background" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:fontFamily">@font/cardo_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Zodiaque.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/general_card_corner_radius</item>
        <item name="android:layout_marginHorizontal">@dimen/general_card_content_margin</item>
        <item name="cardElevation">@dimen/general_card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">?attr/cardBackgroundColor</item>
    </style>
</resources>